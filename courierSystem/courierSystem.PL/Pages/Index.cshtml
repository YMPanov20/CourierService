@page
@model courierSystem.PL.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Your Page Title</title>
    <link rel="stylesheet" href="~/css/IndexStyle.css" />
</head>
<body>

    <main class ="login" id="login">
        <div class="head">
            <h1 class="company">Admin Portal</h1>
        </div>
        <div class="form">
            <form method="post" asp-page-handler="LogIn">

                <div class="form-group">
                    <input asp-for="LogIn.Username" type="text" placeholder="Username" class="text" id="username" required />
                </div>

                <div class="form-group">
                    <input asp-for="LogIn.Password" type="password" placeholder="Password" class="password" minlength="8" />
                </div>

                <button type="submit" class="btn-login">Log In</button>
            </form>
        </div>
    </main>

</body>
</html>